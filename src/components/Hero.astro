---
import CtaButton from "./CtaButton.astro";
import Paragraph, { type TextDescription } from "./basic/Paragraph.astro";
import Title from "./basic/Title.astro";
import LazyImage from "./basic/LazyImage.astro";

export interface Props {
    className?: string;
    title: string | TextDescription[];
    leading: string;
    heroImg: ImageMetadata;
    buttonText: string;
}

const { className = "", heroImg, title, leading, buttonText } = Astro.props;
---

<section class={`relative h-dvh w-dvw md:py-header ${className}`} id="hero">
    <div
        class="md:grid h-full md:grid-cols-2 justify-end md:bg-base-100 dark:bg-base-dark-900"
    >
        <div
            class="justify-center flex flex-col text-center md:ml-auto md:max-w-160 md:p-header max-md:py-header max-md:px-p-sm max-md:absolute max-md:w-full max-md:h-full max-md:z-1 max-md:text-accent-50"
        >
            <Title className="">
                <Paragraph text={title} />
            </Title>
            <Title level="s-1" className="mt-10 md:leading-9 italic">
                {leading}
            </Title>
            <div class="pt-10">
                <CtaButton>{buttonText}</CtaButton>
            </div>
        </div>
        <div class="flex relative md:p-0 max-md:h-full">
            <LazyImage
                src={heroImg}
                alt="A picture of a wind turbine."
                className="w-full h-full object-cover"
            />
            <svg
                class="fill-base-100 dark:fill-base-dark-900 z-10 absolute top-0 start-0 h-full hidden md:block"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 500 400"
            >
                <path d="M0 0l0 400L100 0Z"> </path>
            </svg>
            <div
                class="max-md:block bg-linear-to-b from-black/20 to-black/60 absolute w-full h-full"
            >
            </div>
        </div>
    </div>
</section>
