---
import { extendClass } from "../../utils";
import GradientText from "./GradientText.astro";
export type TextDescription = {
    text: string;
    foreground?: string;
    background?: string;
};
export interface Props {
    className?: string;
    text: string | (string | TextDescription)[];
}

const { className, text } = Astro.props;
---

<span class={extendClass("text-inht", className)}>
    {
        typeof text === "string"
            ? text
            : text.map((item) =>
                  typeof item === "string" ? (
                      item
                  ) : (
                      <GradientText>{item.text}</GradientText>
                  ),
              )
    }
</span>
