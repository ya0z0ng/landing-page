---
export interface Props {
    className?: string;
    level?: "1" | "2" | "3" | "s-1" | "s-2" | "s-3";
}

const { className, level = "1" } = Astro.props;
let levelClass: string[] = [];
switch (level) {
    case "1":
        levelClass.push(
            "max-md:text-3xl md:max-lg:text-4xl md:text-6xl font-bold leading-tight mb-4",
        );
        break;
    case "2":
        levelClass.push(
            "font-bold max-md:text-2xl md:text-4xl leading-tight mb-4",
        );
        break;
    case "3":
        levelClass.push("text-xl font-bold leading-tight mb-4");
        break;
    case "s-1":
        levelClass.push("md:text-xl font-medium mb-2");
        break;
    case "s-2":
        levelClass.push("tracking-wide antialiased mb-8 text-lg md:text-4xl");
        break;
    case "s-3":
        levelClass.push("text-lg font-bold leading-tight mb-2");
        break;
}
className && levelClass.push(className);
---

<h1 class={levelClass.join(" ")}>
    <slot />
</h1>
