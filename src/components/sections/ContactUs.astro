---
import Container from "../Container.astro";
import Paragraph, { type TextDescription } from "../basic/Paragraph.astro";
import Title from "../basic/Title.astro";
import Tag from "../Tag.astro";

export interface Props {
    className?: string;
    title: string | (string | TextDescription)[];
    leading: string;
}

const { className, title, leading } = Astro.props;
---

<section class={`bg-accent-50 py-header ${className}`}>
    <Container
        className="mx-auto flex flex-col items-center justify-center text-center"
    >
        <Title>
            <Paragraph text={title} />
        </Title>
        <Title level="s-2">
            <Paragraph text={leading} />
        </Title>
    </Container>
</section>
