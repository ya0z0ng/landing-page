---
import Title from "../../basic/Title.astro";
import LazyImage from "../../basic/LazyImage.astro";
import Paragraph from "../../basic/Paragraph.astro";

export interface Props {
    title: string;
    description: string;
    visual: ImageMetadata;
    reverse?: boolean;
}
const { title, description, visual, reverse } = Astro.props;
const flexRow = reverse ? "midmd:flex-row-reverse" : "midmd:flex-row";
---

<div
    class={`flex flex-col gap-10 lg:gap-12 ${flexRow} mx-auto max-w-7xl w-full`}
>
    <div
        class="max-w-md mx-auto midmd:max-w-none lg:mx-0 lg:pr-10 xl:pr-2 flex w-11/12 midmd:w-5/12 lg:w-1/2 midmd:h-auto"
    >
        <div class="w-full max-h-[50vh] sm:h-96 midmd:h-full relative">
            <LazyImage
                src={visual}
                alt="banner image"
                width="500"
                class="rounded-3xl object-cover h-full"
            />
        </div>
    </div>
    <div
        class="max-w-md mx-auto w-11/12 flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col"
    >
        <Title level="3">{title}</Title>
        <Paragraph className="mt-3 " text={description} />
    </div>
</div>
