---
import Paragraph, { type TextDescription } from "../../basic/Paragraph.astro";
import Title from "../../basic/Title.astro";

export interface Props {
    className?: string;
    title: string | TextDescription[];
    leading: string;
}

const { className = "", title, leading } = Astro.props;
---

<div class=`${className}  rounded-xl m-5`>
    <div class="flex flex-col justify-start font-sans">
        <Title level="s-2">
            <Paragraph text={title} />
        </Title>
    </div>
    <div class="flex flex-col justify-start">
        <Paragraph className="text-lg md:text-xl font-normal" text={leading} />
    </div>
</div>
