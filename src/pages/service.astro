---
import CompanyImg from "../assets/images/IMG_6626.jpg";
import Layout from "../layouts/Layout.astro";
import NavHeader from "../components/NavHeader.astro";
import NavFooter from "../components/NavFooter.astro";
import Container from "../components/Container.astro";
import Title from "../components/basic/Title.astro";
import LazyImage from "../components/basic/LazyImage.astro";
import { KEY_SERVICES, SITE } from "../consts";
import Text from "../components/basic/Text.astro";

const { company, headNavigations, footNavigations, footerDescription } = SITE;
---

<Layout>
    <NavHeader navigations={headNavigations} className="bg-accent-50" />
    <main class="py-24 bg-accent-50">
        <Container className="flex gap-11 max-md:flex-col">
            <div class="shrink-0 basis-1/3">
                <LazyImage
                    src={CompanyImg}
                    alt="Company Logo"
                    className="md:w-full max-md:w-full h-60 object-cover rounded-2xl overflow-hidden"
                />
            </div>
            <div>
                <Title
                    level="3"
                    className="border-l-6 border-primary pl-2 mb-10"
                    >事業内容</Title
                >
                <p class="font-bold">
                    <Text text={KEY_SERVICES.leading} />
                </p>
                <ul>
                    {
                        KEY_SERVICES.services.map((s) => (
                            <li class="mb-4 marker:text-primary marker:content-['✓____'] marker:font-[system-ui] marker:font-bold">
                                <Text text={s.description} />
                            </li>
                        ))
                    }
                </ul>
            </div>
        </Container>
    </main>
    <NavFooter
        company={company}
        footerDescription={footerDescription}
        navigations={footNavigations}
    />
</Layout>
